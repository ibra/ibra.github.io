---
import Nav from "@components/Nav.astro"
import Layout from "@components/Layout.astro"
---

<Layout title="404 - Page Not Found" padding="64" path="/404">
  <main>
    <div class="w-full max-w-md px-6 py-6 rounded-md">
      <h1
        class="text-slate-200 antialised font-bold text-2xl mb-5 animate-fade stagger-50"
      >
        404 - Page Not Found
      </h1>
      <p
        class="text-slate-400 antialised text-base mb-5 italic animate-fade stagger-100"
      >
        <i>"Not all those who wander are lost" - Tolkien</i>
      </p>
      <Nav />
    </div>
  </main>
</Layout>
