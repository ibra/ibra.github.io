---
import Nav from "@components/Nav.astro";
import Layout from "@layouts/BaseLayout.astro";
import Container from "@components/Container.astro";

const posts = await Astro.glob("./*.md");
---

<Layout title="Ibra's Blog ~" padding="48" path="/blog">
  <Container>
    <Nav />
    <h1
      class="animate-fade antialised font-bold text-2xl my-4 leading-snug stagger-50"
    >
      Blog Posts
    </h1>
    <ul>
      {
        posts.map((post) => (
          <li class="text-slate-400 antialised text-base list-disc animate-fade stagger-450">
            <a href={post.url}>{post.frontmatter.title}</a>
          </li>
        ))
      }
    </ul>
  </Container>
</Layout>
